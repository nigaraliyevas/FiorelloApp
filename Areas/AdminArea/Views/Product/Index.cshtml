@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    var index = 1;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Table</h4>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-success d-inline-block m-5" asp-action="create" asp-controller="product">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No:</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>CreatedDate</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@(index++)</td>
                                    <td>
                                        <img src="~/img/@product.ProductImages.FirstOrDefault(p=>p.IsMain).ImageURL" alt="" />
                                    </td>
                                    <td>@product.Name</td>
                                    <td>@product.Price</td>
                                    <td>@product.Category.Name</td>
                                    <td>@product.CreatedDate?.ToString("dd.MM.yyy")</td>
                                    <td class="d-flex gap-3">
                                        <a class="btn btn-outline-success" asp-action="detail" asp-controller="product" asp-route-id="@product.Id">Detail</a>
                                        <a class="btn btn-outline-primary" asp-action="update" asp-controller="product" asp-route-id="@product.Id">Update</a>
                                        <a class="btn btn-outline-danger" asp-action="delete" asp-controller="product" asp-route-id="@product.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

