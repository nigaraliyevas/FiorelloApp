@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    var index = 1;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-success d-inline-block m-5" asp-action="create" asp-controller="slider">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No:</th>
                                <th>ImageURL</th>
                                <th>CreatedDate</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var slider in Model)
                            {
                                <tr>
                                    <td>@(index++)</td>
                                    <td>
                                        <img style="width:100px; height:100px" src="~/img/@slider.ImageURL" alt="@slider" />
                                    </td>
                                    <td>@slider.CreatedDate?.ToString("dd.MM.yyy")</td>
                                    <td class="d-flex gap-3">
                                        <a class="btn btn-outline-success" asp-action="detail" asp-controller="slider" asp-route-id="@slider.Id">Detail</a>
                                        <a class="btn btn-outline-primary" asp-action="update" asp-controller="slider" asp-route-id="@slider.Id">Update</a>
                                        <a class="btn btn-outline-danger" asp-action="delete" asp-controller="slider" asp-route-id="@slider.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



