@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Category form</h4>
                <form asp-action="create" class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div><div class="form-group">
                        <label asp-for="Desc"></label>
                        <input asp-for="Desc" class="form-control" placeholder="Desc">
                        <span class="text-danger" asp-validation-for="Desc"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <a asp-action="index" class="btn btn-light">Go back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}