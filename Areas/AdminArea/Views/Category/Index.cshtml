@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    var index = 1;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Table</h4>
                <div class="d-flex justify-content-end">
                    <a class="btn btn-success d-inline-block m-5" asp-action="create" asp-controller="category">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>No:</th>
                                <th>Name</th>
                                <th>Desc</th>
                                <th>CreatedDate</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>@(index++)</td>
                                    <td>@category.Name</td>
                                    <td>@category.Desc</td>
                                    <td>@category.CreatedDate?.ToString("dd.MM.yyy")</td>
                                    <td class="d-flex gap-3">
                                        <a class="btn btn-outline-success" asp-action="detail" asp-controller="category" asp-route-id="@category.Id">Detail</a>
                                        <a class="btn btn-outline-primary" asp-action="update" asp-controller="category" asp-route-id="@category.Id">Update</a>
                                        <a class="btn btn-outline-danger" asp-action="delete" asp-controller="category" asp-route-id="@category.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

