@model IEnumerable<Product>
@foreach (var product in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <a asp-controller="home" asp-action="detail" asp-route-id="@product.Id" class="text-decoration-none">
            <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
                <div class="img">
                    <img src="~/img/@(product.ProductImages.Any(p => p.IsMain) ? product.ProductImages.FirstOrDefault(p => p.IsMain).ImageURL : "not found")" class="img-fluid" alt="" />
                </div>
                <div class="title mt-3">
                    <h6>@product.Name</h6>
                </div>
                <div class="price">
                    <a asp-action="addBasket" asp-controller="basket" asp-route-id="@product.Id" class="text-decoration-none text-black-50">Add to cart</a>
                    <span class="text-black-50">$@product.Price</span>
                </div>
            </div>
        </a>

    </div>
}


